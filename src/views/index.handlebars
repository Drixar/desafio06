<div class="row">
<div class='col col-sm-7 text-center'>
  <h1 class='text-center mt-3'>Listado de Productos</h1>
  <table class='table'>
    <thead>
      <tr class='table-primary'>
        <th scope='col'>Code</th>
        <th scope='col'>Title</th>
        <th scope='col'>Price</th>
        <th scope='col'>thumbnail</th>
      </tr>
    </thead>
    <tbody>
      {{#each productos}}
        <tr>
          <th scope='row'>{{code}}</th>
          <td>{{title}}</td>
          <td>{{price}}</td>
          <td>
            <img src={{thumbnail}} alt='' width='30' />
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<div class='col col-sm-4 mb-2 bg-secondary text-white'>
      <h2>Chat</h2>
      <div class='row'>
        <div class='col col-sm-7 text-center'>
          <input type='text' id='messageField' />
        </div>
        <div class='col col-sm-4 text-center'>
          <button
            type='submit'
            class='btn btn-primary mx-3'
            id='sendBoton'
          >Enviar</button>
        </div>
      </div>

      <div id='messageContainer'></div>
</div>
</div>
